<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.laoliuprojectnew.demo.dao.CustomerDao">
    <select id="getAllCustomer" resultType="com.laoliuprojectnew.demo.bean.Customer">
        SELECT * FROM `customer` 
        <if test="name!=null">
            WHERE name like #{name}
        </if>
        LIMIT #{pageStart},#{pageSize}
    </select>

    <select id="getCustomerCounts" resultType="java.lang.Integer">
        SELECT count(*) FROM `customer`
        <if test="name!=null">
            WHERE name like #{name}
        </if>
    </select>

    <update id="updateState">
        UPDATE employee SET state=1,time=NOW() WHERE id = {#id}
    </update>
    <insert id="addCustomer">
        INSERT  INTO customer
        (name,age,sex,phonenumber,address)
        VALUE
        (#{name},#{age},#{sex},#{phonenumber},#{address)}
    </insert>
    <delete id="deleteCustomer">
        DELETE FROM customer WHERE id id=#{id}
    </delete>

    <select id="getUpdateCustomer" resultType="com.laoliuprojectnew.demo.bean.Customer">
        SELETE * FROM customer WHERE id =#{id}
    </select>

    <update id="editCustomer">
        UPDATE  customer SET name={#name},age={#age},
        phonenumber=#{phonenumber},address=#{address)
        WHERE id = #{id}
    </update>
</mapper>